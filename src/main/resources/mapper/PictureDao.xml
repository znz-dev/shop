<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.znz.dao.PictureDao">

    <insert id="createPictureByParams">
        INSERT INTO picture
        (picture_id, good_id, picture, category)
        VALUES
        (#{pictureId},
         #{goodId},
         #{picture},
         #{category}
        )
    </insert>

    <delete id="deletePictureById">
        DELETE FROM
            picture
        WHERE
            picture_id= #{pictureId}
    </delete>

    <select id="queryPicturesByGoodId" resultType="Picture">
        SELECT
            picture_id, good_id, picture, category, create_time
        FROM
            picture
        WHERE
            good_id = #{goodId}
    </select>

</mapper>